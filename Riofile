services:
  website:
    scale: 1-20 
    app: website 
    version: v1
    concurrency: 80
    build: 
      repo: https://github.com/harm-matthias-harms/website
      branch: master
      buildImageName: harmmatthias/website	
      pushRegistry: docker.io
    ports:
    - 8080/http
    livenessProbe:
      httpGet:
        path: /
        port: 8080
      initialDelaySeconds: 10
    readinessProbe:
      failureThreshold: 7
      httpGet:
        path: /
        port: 8080